<script>
function validarUtilizacion() {
  var filasConoce = document.querySelectorAll("input[name^='conoce']");
  filasConoce.forEach(function(fila) {
    fila.addEventListener('change', function() {
      var utiliza = this.closest("tr").querySelector("input[name^='utiliza']");
      if (this.value === "no") {
        utiliza.disabled = true;
        utiliza.checked = false;
      } else {
        utiliza.disabled = false;
      }
    });
  });
}
validarUtilizacion();
</script>


